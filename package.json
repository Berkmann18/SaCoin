{
  "name": "sacoin",
  "version": "0.0.0-development",
  "description": "An educational JS blockchain aimed at being usable in productions",
  "main": "index.js",
  "directories": {
    "doc": "doc",
    "test": "tests"
  },
  "scripts": {
    "test": "jest",
    "lint:js": "eslint -c ./.eslintrc.js --fix src/*.js tests/*.js",
    "doc:lint": "documentation lint src/**",
    "doc:html": "documentation build src/** -f html -o doc/",
    "doc": "npm run doc:lint && npm run doc:html",
    "changelog": "conventional-changelog -p eslint -i CHANGELOG.md -s -r 0",
    "version": "npm run changelog && git add CHANGELOG.md",
    "precommit": "lint-staged",
    "commit": "git-cz",
    "travis-deploy-once": "travis-deploy-once",
    "semantic-release": "semantic-release",
    "lint:md": "remark . .github -i ./.remarkignore",
    "lint": "npm run lint:js && npm run lint:md"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Berkmann18/SaCoin.git"
  },
  "keywords": [
    "blockchain",
    "cryptocurrency",
    "education",
    "production",
    "javascript",
    "nodejs",
    "es6"
  ],
  "author": "Berkmann18",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Berkmann18/SaCoin/issues"
  },
  "homepage": "https://github.com/Berkmann18/SaCoin#readme",
  "dependencies": {
    "circular-json": "^0.5.9",
    "colors": "^1.3.1",
    "crypto-js": "^3.1.9-1",
    "jsrsasign": "^8.0.12",
    "lodash": "^4.17.10",
    "merkletreejs": "0.0.20",
    "nclr": "^1.2.1"
  },
  "devDependencies": {
    "cz-adapter-eslint": "^0.1.2",
    "documentation": "^9.0.0",
    "eslint": "^5.7.0",
    "eslint-plugin-security": "^1.4.0",
    "jest": "^23.4.2",
    "remark-cli": "^6.0.0",
    "remark-preset-lint-consistent": "^2.0.2",
    "remark-preset-lint-recommended": "^3.0.2",
    "semantic-release": "^15.10.8",
    "travis-deploy-once": "^5.0.9"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/*.js",
      "test/*.js",
      "!**/node_modules/**",
      "!**/_*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 90,
        "lines": 50,
        "statements": 50
      }
    },
    "testEnvironment": "node"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 9"
  ],
  "engines": {
    "node": ">= 7.0.0",
    "npm": ">= 4.0.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-adapter-eslint"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint -c ./.eslintrc.js --fix",
      "jest --bail --findRelatedTests",
      "git add"
    ],
    "*.md": [
      "remark",
      "git add"
    ]
  }
}
